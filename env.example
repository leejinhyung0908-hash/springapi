# Spring Boot Application
SPRING_PROFILES_ACTIVE=production

# Server
SERVER_PORT=8080

# Upstash Redis
# Redis 프로토콜 URL 형식 (권장)
# Upstash 대시보드에서 "Redis URL" 복사 (예: redis://default:TOKEN@HOST:PORT)
UPSTASH_REDIS_URL=redis://default:your-redis-token@your-redis-endpoint.upstash.io:6379
# 또는 SSL 사용 시
# UPSTASH_REDIS_URL=rediss://default:your-redis-token@your-redis-endpoint.upstash.io:6379

# Redis 비밀번호 (토큰) - URL에 포함되어 있으면 생략 가능
# UPSTASH_REDIS_TOKEN=your-redis-token

# Neon DB (PostgreSQL)
NEON_DB_URL=jdbc:postgresql://your-neon-endpoint.neon.tech/your-database?sslmode=require
NEON_DB_USERNAME=your-username
NEON_DB_PASSWORD=your-password

# JWT
JWT_SECRET=your-secret-key-min-32-characters-change-in-production
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# Kakao OAuth
KAKAO_REST_API_KEY=
KAKAO_REDIRECT_URI=https://your-domain.com/api/auth/kakao/callback
KAKAO_CLIENT_SECRET=

# Naver OAuth
NAVER_CLIENT_ID=
NAVER_CLIENT_SECRET=
NAVER_REDIRECT_URI=https://your-domain.com/api/auth/naver/callback

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=https://your-domain.com/api/auth/google/callback

# Frontend
FRONT_LOGIN_CALLBACK_URL=https://your-frontend-domain.com
FRONT_LOGIN_SUCCESS_PATH=/

# Cookie
COOKIE_SECURE=true
COOKIE_SAME_SITE=Lax

